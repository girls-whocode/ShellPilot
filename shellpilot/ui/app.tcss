Screen {
    layout: vertical;
    background: #05060a;
}

/* Main row: left | output | help */
Horizontal {
    /* Let it fill space above the bottom bar */
}

/* LEFT PANE LAYOUT */

#left-pane {
    width: 1fr;          /* was 30% */
    min-width: 24;
    border-right: solid #444444;
}

#breadcrumb {
    padding: 0 1;
    height: 1;
    color: #a0a0ff;
}

#search {
    height: 1;              /* 1 row tall */
    min-height: 1;
    padding: 0 1;           /* no vertical padding, just a bit left/right */
    margin-bottom: 1;       /* small gap before the file list */
    border: none;           /* optional: remove border if it feels bulky */
    content-align: left middle;
}

#search-bar {
    display: none;
}

#search-bar.-visible {
    display: block;
}

#files {
    height: 1fr;
}

/* MIDDLE + RIGHT PANES */

#output-container {
    width: 1fr;          /* was 45% */
    min-width: 32;
    padding: 1 2;
    border-right: solid #333333;
}

#preview-container {
    width: 1fr;          /* was 25% */
    min-width: 24;
    padding: 1 2;
}

CommandPreview {
    text-opacity: 0.95;
}

OutputPanel {
    text-opacity: 0.95;
}

/* BOTTOM BAR: holds status + footer */

#bottom-bar {
    dock: bottom;      /* stick this whole thing to the bottom */
    layout: vertical;  /* status on top, footer below */
    /* height auto = 2 lines, because of the children */
}

/* STATUS BAR (info line) */
#status {
    height: 1;
    padding: 0 1;
    border-top: solid #333333;
    color: #bbbbff;
    background: #111118;   /* keep if you like the subtle strip */
}

/* FOOTER (key bindings) */
Footer {
    height: 1;
    dock: none;   /* it's inside #bottom-bar now, no self-docking */
}

